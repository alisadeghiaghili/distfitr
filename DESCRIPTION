Package: distfitr
Type: Package
Title: Advanced Distribution Fitting with Enhanced Diagnostics and Multilingual Support
Version: 0.2.1
Date: 2026-02-14
Authors@R: c(
    person("Ali", "Sadeghi Aghili", 
           email = "alisadeghiaghili@gmail.com",
